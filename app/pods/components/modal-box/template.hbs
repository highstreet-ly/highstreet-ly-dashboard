<div class="swal2-container swal2-center swal2-backdrop-show modal-box {{@classes}}" style="overflow-y: auto;">

  <div class="swal2-bg">

  </div>

  <div aria-labelledby="swal2-title" aria-describedby="swal2-content"
    class="swal2-popup swal2-modal swal2-icon-warning swal2-show" tabindex="-1" role="dialog" aria-live="assertive"
    aria-modal="true">

    {{#if @saving}}
    <LoadingBlocker />
  {{/if}}

    {{#if @loading}}
      <LoadingIcon />
    {{else}}
      <div class="swal2-header">
        {{#if @icon}}
          <div class="swal2-icon swal2-warning swal2-icon-show"
            style="display: flex; color: rgb(255, 71, 71); border-color: rgb(255, 71, 71);">
            <div class="swal2-icon-content">
              {{@icon}}
            </div>
          </div>
        {{/if}}
        {{#if @title}}
          <h2 class="swal2-title" id="swal2-title">
            {{@title}}
          </h2>
        {{/if}}
        <button type="button" class="swal2-close" aria-label="Close this dialog" style="display: none;">
          Ã—
        </button>
      </div>
      <div class="swal2-content">
        <div id="swal2-content" class="swal2-html-container" style="display: block;">
          {{yield to="content"}}
        </div>
      </div>
      <div class="swal2-actions">
        <div class="swal2-loader"></div>
        {{#if @onCancel}}
          <button type="button" class="btn btn-secondary" {{on 'click' @onCancel}}>{{if @onCancelLabel @onCancelLabel 'Cancel'}}</button>
        {{/if}}
        {{yield to="actions"}}
        {{! <button
        type="button"
        class="swal2-confirm swal2-styled"
        aria-label=""
        style="display: inline-block; background-color: rgb(255, 71, 71);"
      >
        Yes, delete this category
      </button>
      <button
        type="button"
        class="swal2-deny swal2-styled"
        aria-label=""
        style="display: none;"
      >
        No
      </button>
      <button
        type="button"
        class="swal2-cancel swal2-styled"
        aria-label=""
        style="display: inline-block;"
      >
        Cancel
      </button> }}
      </div>
    {{/if}}
  </div>

</div>

<style>
  .modal-box color: rgb(255, 71, 71);
  border-color: rgb(255, 71, 71);
</style>
