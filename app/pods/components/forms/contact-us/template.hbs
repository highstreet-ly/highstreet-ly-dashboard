<div class="contact-form">
  <div class="form-row">
    <div class="form-group col-lg-6">
      <label for="contact-name">
        Name
      </label>
      <Input
        id="contact-name"
        class="form-control"
        @value={{this.fields.name}}
      />
    </div>
    <div class="form-group col-lg-6">
      <label for="contact-email">
        Email
      </label>
      <Input
        id="contact-email"
        class="form-control"
        @value={{this.fields.email}}
      />
    </div>
    <div class="form-group col-12">
      <label for="contact-message">
        Tell us more
      </label>
      <Textarea class="form-control" @value={{this.fields.message}} />
    </div>
  </div>
  <div class="mt-3 text-center">
    <button type="button" class="btn btn-primary" {{on 'click' this.submit}}></button>
  </div>
</div>